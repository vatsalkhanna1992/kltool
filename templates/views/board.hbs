<!DOCTYPE html>
<html>
    <head>
        <title>
            Kanban board | Kltool
        </title>
        {{>general_css_js}}
        {{>materialize}}
        <meta content="width=device-width, initial-scale=1" name="viewport" />
        <style>
            @media (min-width: 992px) {
                .container-scroll {
                    overflow-x: auto !important;
                }
            }
        </style>
    </head>
    <body class="kanban-board" data-board-id={{board_id}}>
        <div class="content">
            <div class="container-fluid">
                {{>header}}
            </div>
            <div class="container">
                <div class="row">
                    <div class="col s12">
                        <h5 class="page_title">{{ board_title }} <button title="Add Card" type="button" data-toggle="modal" data-target="#addCard">+</button></h5>
                    </div>
                </div>
            </div>
            <div class="container container-scroll">
                <div class="row d-none d-sm-flex text-center">
                    {{#columnsLength col_layout '3'}}
                        {{#each column_title}}
                            {{>board_desktop_3}}
                        {{/each}}
                    {{/columnsLength}}
                    {{#columnsLength col_layout '6'}}
                        {{#each column_title}}
                            {{>board_desktop_6}}
                        {{/each}}
                    {{/columnsLength}}
                    {{#columnsLength col_layout '12'}}
                        {{#each column_title}}
                            {{>board_desktop_12}}
                        {{/each}}
                    {{/columnsLength}}
                </div>
                <div class="row">
                    {{#columnsLength col_layout '3'}}
                        {{!-- {{#each this.column_title}} --}}
                        {{>board_mobile_3}}
                        {{>board_desktop_3_cards}}
                    {{/columnsLength}}
                    {{#columnsLength col_layout '6'}}
                        {{>board_mobile_6}}
                        {{>board_desktop_6_cards}}
                    {{/columnsLength}}
                    {{#columnsLength col_layout '12'}}
                        {{>board_mobile_12}}
                        {{>board_desktop_12_cards}}
                    {{/columnsLength}}
                            {{!-- <div class="col-12 col-md-4 todo cards" ondrop="drop(event, this)" ondragover="allowDrop(event)">
                                {{#each cards}}
                                    {{#cardsStatus this.status 'todo'}}
                                        {{>card}}
                                    {{/cardsStatus}}
                                {{/each}}
                            </div>
                            <div class="col-12 col-md-4 inprogress cards" ondrop="drop(event, this)" ondragover="allowDrop(event)">
                                {{#each cards}}
                                    {{#cardsStatus this.status 'in_progress'}}
                                        {{>card}}
                                    {{/cardsStatus}}
                                {{/each}}
                            </div>
                            <div class="col-12 col-md-4 completed cards" ondrop="drop(event, this)" ondragover="allowDrop(event)">
                                {{#each cards}}
                                    {{#cardsStatus this.status 'done'}}
                                        {{>card}}
                                    {{/cardsStatus}}
                                {{/each}}
                            </div> --}}
                        {{!-- {{/each}} --}}
                </div>
            </div>
            <div class="modal" tabindex="-1" role="dialog" id="addCard">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <form method="post" action="/new/card">
                            <div class="modal-header">
                                <h5 class="modal-title">New Card</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <input type="hidden" name="board_id" value={{board_id}} />
                                <div class="input-field">
                                    <input type="text" name="card_title" required />
                                    <label>Task</label>
                                </div>
                                <div class="input-field">
                                    <textarea name="card_description" class="materialize-textarea"></textarea>
                                    <label>Description</label>
                                </div>
                                <div class="input-field">
                                    <select name="card_status" required>
                                        {{#each column_title}}
                                            <option value={{@key}}>{{this}}</option>
                                        {{/each}}
                                    </select>
                                    <label>Status</label>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn kltool-button">Add Card</button>
                                <!--<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>-->
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <div class="modal" tabindex="-1" role="dialog" id="editCard">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <form method="post" action="/update/card">
                            <div class="modal-header">
                                <h5 class="modal-title">Edit Card</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <div class="input-field">
                                    <input type="hidden" id="card_id" name="card_id" />
                                </div>
                                <div class="input-field">
                                    <input type="hidden" id="board_id" name="board_id" />
                                </div>
                                <div class="input-field">
                                    <input type="text" id="card_title" name="update_card_title" required />
                                    <label>Task</label>
                                </div>
                                <div class="input-field">
                                    <textarea id="card_description" name="update_card_description" class="materialize-textarea"></textarea>
                                    <label>Description</label>
                                </div>
                                <div class="input-field" >
                                    <select name="update_card_status" id="card_status" required>
                                        {{#each column_title}}
                                            <option value={{@key}}>{{this}}</option>
                                        {{/each}}
                                    </select>
                                    <label>Status</label>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="submit" class="btn kltool-button">Update Card</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {{>footer}}
        <script src="/js/scripts.js"></script>
    </body>
</html>