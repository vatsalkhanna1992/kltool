<!DOCTYPE html>
<html>
    <head>
        <title>
            Kanban board | Kltool
        </title>
    </head>
    <body class="kanban-board">
        <div class="container">
            {{>header}}
            <div class="row">
                <div class="col s12">
                    <h5>Kanban Board <button title="Add Card" type="button" data-toggle="modal" data-target="#myModal">+</button></h5>
                </div>
            </div>
            <div class="row">
                <div class="col s3">
                    <h6>To Do</h6>
                    <div class="cards">
                        {{#each cards}}
                            {{#cardsStatus this.status 'todo'}}
                                    <div class="row">
                                        <div class="card todo">
                                            <p class="card_title">{{ this.title }}</p>
                                            <p class="card_description">{{ this.description }}</p>
                                        </div>
                                    </div>
                            {{/cardsStatus}}
                        {{/each}}
                    </div>
                </div>
                <div class="col s3">
                    <h6>In Progress</h6>
                    <div class="cards">
                        {{#each cards}}
                            {{#cardsStatus this.status 'in_progress'}}
                                    <div class="row">
                                        <div class="card inprogress">
                                            <p class="card_title">{{ this.title }}</p>
                                            <p class="card_description">{{ this.description }}</p>
                                        </div>
                                    </div>
                            {{/cardsStatus}}
                        {{/each}}
                    </div>
                </div>
                <div class="col s3">
                    <h6>Completed</h6>
                    <div class="cards">
                        {{#each cards}}
                            {{#cardsStatus this.status 'done'}}
                                    <div class="row">
                                        <div class="card completed">
                                            <p class="card_title">{{ this.title }}</p>
                                            <p class="card_description">{{ this.description }}</p>
                                        </div>
                                    </div>
                            {{/cardsStatus}}
                        {{/each}}
                    </div>
                </div>
            </div>
        </div>
        <div class="modal" tabindex="-1" role="dialog" id="myModal">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <form method="post" action="/add/card">
                        <div class="modal-header">
                            <h5 class="modal-title">New Card</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="input-field">
                                <input type="text" name="card_title" required>
                                <label>Task</label>
                            </div>
                            <div class="input-field">
                                <textarea name="card_description" class="materialize-textarea"></textarea>
                                <label>Description</label>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Add Card</button>
                            <!--<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>-->
                        </div>
                    </form>
                </div>
            </div>
        </div>
        {{>general_css_js}}
        {{>materialize}}
    </body>
</html>