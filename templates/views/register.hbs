<!DOCTYPE html>
<html>
    <head>
        <title>
           User Registration | Kltool
        </title>
        {{>general_css_js}}
        {{>materialize}}
    </head>
    <body class="registration">
        <div class="container">
            <form method="post" action="/user/registration">
                <div class="row">
                    <h5 class="kltool-text">
                        Get Started
                    </h5>
                </div>
                <div class="row">
                    <div class="error">{{{ error }}}</div>
                </div>
                <div class="row">
                    <div class="input-field">
                        <input type="text" name="username" size="50" required>
                        <label>Username</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field">
                        <input type="text" name="first_name" size="50" required>
                        <label>First Name</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field">
                        <input type="text" name="last_name" size="50" required>
                        <label>Last Name</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field">
                        <input type="password" name="password" size="50" required>
                        <label>Password</label>
                    </div>
                </div>
                <div class="row">
                    <button class="btn kltool-button" type="submit">Get Started</button>
                </div>
                <div class="row">
                    <p class="kltool-text">Already have an account? <a href="/">Sign in</a></p>
                </div>
            </form>
        </div>
        <script src="/js/scripts.js"></script>
    </body>
    {{>footer}}
</html>